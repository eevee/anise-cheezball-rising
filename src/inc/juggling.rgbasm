; Register juggling

; Load HL into itself.  Assumes HL is pointing at the first byte
; of a little-endian address.
; Trashes A.
MACRO DerefHL
    ld a, [hl+]
    ld h, [hl]
    ld l, a
ENDM


; TODO optimize meeee
MACRO TraverseField
IF \1 >= 0 && \1 <= 4
REPT \1
    inc hl
ENDR
ELIF \1 < 0 && \1 >= -4
REPT -(\1)
    dec hl
ENDR
ELSE
    push bc
    ld bc, \1
    add hl, bc
    pop bc
ENDC
ENDM
